<config id="sharpdx-xact3" depends="sharpdx sharpdx-xaudio2" xmlns="urn:SharpGen.Config">

  <namespace>SharpDX.XACT3</namespace>
  <assembly>SharpDX.XACT3</assembly>
  
  <include file="xact3.h" attach="true" >
    <filter-error>$(FILTER_PASTING_ERROR)</filter-error>
    <pre>
      #undef _X86_
    </pre>
    <post>
      #define _X86_
    </post>
  </include>
  <include id="xact3wb" file="xact3wb.h" attach="true" />


  <extension>
    <context>sharpdx-xact3-ext</context>
    <context>xact3</context>
    <context>xact3wb</context>

    <create class="XACT3"/>
    
    <context-clear />
  </extension>

  <mapping>
    <context>sharpdx-xact3-ext</context>
    <context>xact3</context>
    <context>xact3wb</context>

    <!--
    // *****************************************************************
    // XACT3 Enumerations
    // *****************************************************************
    -->
    <map enum="XACT3(.*)" name-tmp="$1" />

    <!--
    // *****************************************************************
    // XACT3 Structures
    // *****************************************************************
    -->
    <map struct="XACT3(.*)" name-tmp="$1" />

    <!--
    // *****************************************************************
    // XACT3 Interfaces
    // *****************************************************************
    -->
    <map interface="IXACT3(.*)" name-tmp="$1" />
    <map method="IXACT3Cue::SetOutputVoices" visibility="internal" property="false" />

    <!--
    // *****************************************************************
    // XACT3 Functions
    // *****************************************************************
    -->


    <context-clear />
  </mapping>
</config>